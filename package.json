{
  "name": "@inperium-corp/remixtron",
  "version": "0.0.2",
  "author": "Inperium Corp",
  "description": "Electron integration for Remix",
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": "https://github.com/inperium-corp/remixtron",
  "types": "./dist/main.d.ts",
  "main": "./dist/main.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup-node src/main.ts --target node16 --format cjs --dts --sourcemap",
    "build-watch": "pnpm build -- --watch",
    "lint": "eslint --ext js,ts,tsx .",
    "lint-fix": "pnpm lint -- --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "pnpm build && vitest --no-watch",
    "test-dev": "run-p --print-label --race vitest-ui build-watch",
    "vitest-ui": "vitest --ui",
    "release": "release-it"
  },
  "dependencies": {
    "@types/mime": "^3.0.1",
    "fast-glob": "^3.3.0",
    "mime": "^3.0.0"
  },
  "peerDependencies": {
    "@remix-run/node": ">=1.19.0",
    "@remix-run/react": ">=1.19.0",
    "@remix-run/server-runtime": ">=1.19.0",
    "@remix-run/web-stream": ">=1.0.3",
    "electron": ">=25",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^1.19.1",
    "@remix-run/serve": "^1.19.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "@types/node": "20.4.9",
    "electron": "^25.3.1",
    "esbuild": "^0.18.15",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "execa": "^6.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "release-it": "^14.14.2",
    "tsup": "^5.12.5",
    "typescript": "^4.6.3"
  },
  "release-it": {
    "git": {
      "commitMessage": "v${version}",
      "commit": true,
      "tag": true,
      "push": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "github": {
      "release": true,
      "web": true
    }
  }
}
