    "module": "ESNext",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "jsx": "react-jsx",
    "paths": {
      "~/*": ["./template/app/*"]
    },
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.Iterable", "ES2019", "ESNext"]
  },
  "exclude": ["**/dist/**", "**/build/**", "**/.cache/**"]
}
